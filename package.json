	"lint-staged": {
		"src/**/*.{js,jsx}": [
			"eslint",
			"git add"
		]
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"eslint": "^6.6.0",
		"eslint-config-airbnb": "^18.2.1",
